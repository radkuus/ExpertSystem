<UserControl x:Class="ExpertSystem.WPF.Views.AnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpertSystem.WPF.Views"
             xmlns:navigator="clr-namespace:ExpertSystem.WPF.State.Navigators"
             xmlns:vm="clr-namespace:ExpertSystem.WPF.ViewModels"
             xmlns:converters="clr-namespace:ExpertSystem.WPF.Converters"
             xmlns:behaviors="clr-namespace:ExpertSystem.WPF.Controls.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanVisibilityConverter"/>
        <converters:IfThenConditionTypeToVisibilityConverter x:Key="IfThenConditionTypeToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BlueBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="3" 
              Grid.RowSpan="3"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
              Background="#80000000" 
              IsHitTestVisible="True"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Panel.ZIndex="999">

            <StackPanel Orientation="Vertical" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Margin="10">
                <TextBlock Text="{Binding LoadingMessage}" 
                           VerticalAlignment="Center" 
                           FontSize="40" 
                           FontWeight="SemiBold"
                           Foreground="White"/>
                <ProgressBar IsIndeterminate="True" 
                             Width="250" 
                             Height="50"/>
            </StackPanel>
        </Grid>
        <Border Grid.Row="0" 
                Grid.Column="0" 
                Style="{StaticResource PurpleGradientBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" 
                                   SharedSizeGroup="HeaderRow"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="5" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Choose dataset" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Grid.Column="0" 
                               Grid.Row="0"
                               VerticalAlignment="Center"
                               Foreground="White"/>
                    <TextBlock Grid.Row="1" 
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center"
                               DataContext="{Binding ErrorMessageViewModel}"
                               Foreground="Red"
                               Text="{Binding Message}"
                               TextWrapping="Wrap"
                               Visibility="{Binding ShowMessage, Converter={StaticResource BooleanVisibilityConverter}}"/>
                </Grid>

                <ListView ItemsSource="{Binding UserDatasets}" 
                          FontSize="15" 
                          Margin="5" 
                          Grid.Row="1" 
                          SelectedItem="{Binding SelectedDataset}"
                          Style="{StaticResource CustomListViewStyle}">
                    <ListView.View>
                        <GridView
                            ColumnHeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}">
                            
                            <GridViewColumn Header="Name" 
                                            DisplayMemberBinding="{Binding Name}" 
                                            Width="auto"/>
                            <GridViewColumn Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="View Details" 
                                                Command="{Binding DataContext.DisplayDatasetAsDataFrameAndStatisticsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                FontSize="12" 
                                                Padding="5"
                                                Style="{StaticResource DetailsButtonStyle}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <Border Grid.Row="0" 
                Grid.Column="1" 
                Style="{StaticResource PurpleGradientBorderStyle}"
                Visibility="{Binding SelectedDataset, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" 
                                   SharedSizeGroup="HeaderRow"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Margin="5" Grid.Row="0">
                    <TextBlock Text="Choose model and columns for analysis" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               TextWrapping="Wrap" 
                               VerticalAlignment="Center"
                               Foreground="White"/>
                </Grid>

                <TextBlock Grid.Row="1" 
                           Text="Model" 
                           Margin="5,10,0,0" 
                           FontSize="17"
                           Foreground="White"/>

                <StackPanel Grid.Row="2" 
                            Margin="5,10,0,0">
                    <StackPanel.Resources>
                        <Style TargetType="CheckBox">
                            <Setter Property="FontSize" 
                                    Value="14"/>
                        </Style>
                    </StackPanel.Resources>

                    <CheckBox Content="KNN"  
                              IsChecked="{Binding IsKnnChecked}"
                              Foreground="White" />
                    <CheckBox Content="Logistic Regression"  
                              IsChecked="{Binding IsLogisticRegressionChecked}"
                              Foreground="White" />
                    <CheckBox Content="Bayes"  
                              IsChecked="{Binding IsBayesChecked}"
                              Foreground="White"/>
                    <CheckBox Content="Neural Network"  
                              IsChecked="{Binding IsNeuralNetworkChecked}"
                              Foreground="White"/>
                    <CheckBox Content="If=>Then"  
                              IsChecked="{Binding IsIfThenChecked}"
                              Foreground="White" />
                </StackPanel>

                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Columns for analysis" 
                               Margin="5,10,0,0" 
                               FontSize="17"
                               Foreground="White"/>

                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="0,5,0,5">

                        <TextBlock Text="Columns:" 
                                   FontSize="14" 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,10,0"
                                   Foreground="White"/>
                        <ListBox x:Name="ColumnsForAnalysisListBox"
                                 Width="150" 
                                 Height="200" 
                                 FontSize="15"
                                 ItemsSource="{Binding DatasetNumericColumnNames}"
                                 SelectionMode="Multiple"
                                 behaviors:ListBoxSelectedItemsBehavior.BindableSelectedItems="{Binding SelectedColumnsForAnalysis}"
                                 Background="Transparent"
                                 BorderBrush="{StaticResource PurpleGradientBrush}"
                                 BorderThickness="2">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" 
                                            Value="Gray"/>
                                    <Setter Property="Foreground" 
                                            Value="White"/>
                                    <Setter Property="Padding" 
                                            Value="5"/>
                                    <Setter Property="Margin" 
                                            Value="2"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                        <StackPanel Grid.Row="1" 
                                    Orientation="Vertical" 
                                    VerticalAlignment="Center"
                                    Margin="25,5,5,5">

                            <Button Content="Select All" 
                                    Click="SelectAllButton_Click"
                                    Width="75"
                                    Margin="0,0,0,10"
                                    Style="{StaticResource SelectButtonStyle}"/>

                            <Button Content="Unselect All" 
                                    Click="UnselectAllButton_Click"
                                    Width="75"
                                    Margin="0,10,0,0"
                                    Style="{StaticResource SelectButtonStyle}"/>    
                        </StackPanel>
                        
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>


        <Border Grid.Row="0" 
                Grid.Column="2" 
                Style="{StaticResource PurpleGradientBorderStyle}" 
                Visibility="{Binding IsAnyModelAndColumnForAnalysisChecked, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" 
                                   SharedSizeGroup="HeaderRow"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="5" Grid.Row="0">
                    <TextBlock Text="Choose details" 
                               TextWrapping="Wrap" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Grid.Column="0" 
                               VerticalAlignment="Center"
                               Foreground="White"/>
                </Grid>

                <StackPanel Grid.Row="1" 
                            Margin="5">
                    <StackPanel.Resources>
                        <Style TargetType="CheckBox">
                            <Setter Property="FontSize" 
                                    Value="15"/>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" 
                                    Value="17"/>
                        </Style>
                    </StackPanel.Resources>

                    <Grid Visibility="{Binding IsKnnChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" 
                                   Text="KNN" 
                                   Margin="0,0,0,5"  
                                   Foreground="White"/>
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="Neighbours:" 
                                       FontSize="14" 
                                       Width="105" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"  
                                       Foreground="White"/>
                            <ComboBox Width="100"
                                      FontSize="15" 
                                      IsEnabled="{Binding IsKnnChecked}" 
                                      SelectedValue="{Binding SelectedNeighbours, Mode=TwoWay}" 
                                      SelectedValuePath="Content"
                                      Style="{StaticResource DarkComboBoxStyle}">
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="6"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Row="2" 
                                    Margin="0 5 0 0" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center">

                            <TextBlock Text="Distance metrics:" 
                                       FontSize="14" 
                                       Width="105" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"  
                                       Foreground="White"/>
                            <ComboBox Width="100" FontSize="15" 
                                      IsEnabled="{Binding IsKnnChecked}" 
                                      SelectedValue="{Binding SelectedDistanceMetrics, Mode=TwoWay}" 
                                      SelectedValuePath="Content"
                                      Style="{StaticResource DarkComboBoxStyle}">
                                <ComboBoxItem Content="Euclidean"/>
                                <ComboBoxItem Content="Manhattan"/>
                                <ComboBoxItem Content="Chebyshev"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Grid Visibility="{Binding IsNeuralNetworkChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" 
                                   Text="Neural Network" 
                                   Margin="0,10,0,0"  
                                   Foreground="White"/>
                        <StackPanel Grid.Row="1" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center" 
                                    Margin="0,5,0,5">
                            <TextBlock Text="Layers:" 
                                       FontSize="14" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"  
                                       Foreground="White"/>
                            <ComboBox Width="100" FontSize="15" 
                                      IsEnabled="{Binding IsNeuralNetworkChecked}" 
                                      SelectedValue="{Binding SelectedLayers, Mode=TwoWay}" 
                                      SelectedValuePath="Content"
                                      Style="{StaticResource DarkComboBoxStyle}">
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center"
                                    Margin="0,5,0,5">
                            <ItemsControl Grid.Row="2" 
                                          ItemsSource="{Binding NeuronCounts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                                                    Margin="0,5,0,0">
                                            <TextBlock Text="Neurons in layer:" 
                                                       FontSize="14" 
                                                       VerticalAlignment="Center" 
                                                       Margin="0,0,5,0" 
                                                       Foreground="White"/>
                                            <TextBox Width="50" 
                                                     Height="25" 
                                                     FontSize="15" 
                                                     Text="{Binding NeuronCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource DarkTextBoxStyle}">
                                                <i:Interaction.Behaviors>
                                                    <behaviors:NumericInputBehaviorNeuronCount/>
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>

                    <Grid Visibility="{Binding IsAnyModelWithoutIfThenAndColumnForAnalysisChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" 
                                   Text="Training set percentage(20% - 89%)" Margin="0,10,0,0"  
                                   Foreground="White"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,5">
                            <TextBlock Text="Percent:" 
                                       FontSize="14" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"  
                                       Foreground="White"/>
                            <TextBox Width="100" 
                                     Height="25" 
                                     FontSize="15" 
                                     Text="{Binding SelectedTrainingSetPercentage,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  
                                     MaxLength="4"
                                     Style="{StaticResource DarkTextBoxStyle}">
                                <i:Interaction.Behaviors>
                                    <behaviors:NumericInputBehaviorTrainingSetPercentage/>
                                </i:Interaction.Behaviors>
                            </TextBox>
                        </StackPanel>
                    </Grid>

                    <Grid Visibility="{Binding IsAnyModelChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" 
                                   Text="Result column" 
                                   Margin="0,10,0,0"  
                                   Foreground="White"/>
                        <StackPanel Grid.Row="1" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center" 
                                    Margin="0,5,0,5">
                            <TextBlock Text="Column:" 
                                       FontSize="14" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"  
                                       Foreground="White"/>
                            <ComboBox Width="150" FontSize="15" 
                                      ItemsSource="{Binding DatasetColumnNames}" 
                                      SelectedItem="{Binding SelectedResultColumn, Mode=TwoWay}"
                                      Style="{StaticResource DarkComboBoxStyle}"/>
                        </StackPanel>
                    </Grid>

                    <Button Content="Generate Results" 
                            Command="{Binding GenerateResultsCommand}" 
                            FontSize="15" 
                            Margin="0,10,0,0" 
                            Padding="10,5" 
                            HorizontalAlignment="Center" 
                            Style="{StaticResource CustomButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1"
              Grid.Column="0" 
              Grid.ColumnSpan="3">
            <StackPanel>
                <Border Style="{StaticResource PurpleGradientBorderStyle}"
                        Visibility="{Binding IsIfThenAndResultColumnChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="5" 
                              Grid.Row="0">
                            <TextBlock Text="Create your own conditions" 
                                       FontSize="20"
                                       FontWeight="Bold" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       Foreground="White"/>
                        </Grid>

                        <StackPanel Grid.Row="1" 
                                    Orientation="Horizontal" 
                                    Margin="10">

                            <Button Content="Add if condition" 
                                    Height="35" 
                                    Width="Auto" 
                                    FontSize="12" 
                                    Padding="5" 
                                    VerticalAlignment="Top" 
                                    Margin="5,0"
                                    Style="{StaticResource AddButtonStyle}"
                                    Command="{Binding AddIfConditionCommand}"/>
                            <Button Content="Add and condition" 
                                    Height="35" 
                                    Width="Auto" 
                                    FontSize="12" 
                                    Padding="5" 
                                    VerticalAlignment="Top"
                                    Margin="5,0"
                                    Style="{StaticResource AddButtonStyle}"
                                    Command="{Binding AddAndConditionCommand}"/>
                            <Button Content="Remove if condition" 
                                    Height="35" 
                                    Width="Auto" 
                                    FontSize="12" 
                                    Padding="5" 
                                    VerticalAlignment="Top" 
                                    Margin="5,0"
                                    Style="{StaticResource RemoveButtonStyle}"
                                    Command="{Binding RemoveIfConditionCommand}"/>
                            <Button Content="Remove and condition" 
                                    Height="35" 
                                    Width="Auto" 
                                    FontSize="12" 
                                    Padding="5" 
                                    VerticalAlignment="Top" 
                                    Margin="5,0"
                                    Style="{StaticResource RemoveButtonStyle}"
                                    Command="{Binding RemoveAndConditionCommand}"/>
                            <Button Content="Add then" 
                                    Height="35" 
                                    Width="Auto" 
                                    FontSize="12" 
                                    Padding="5" 
                                    VerticalAlignment="Top"
                                    Margin="5,0"
                                    Style="{StaticResource AddButtonStyle}"
                                    Command="{Binding AddThenInConditionCommand}" 
                                    CommandParameter="{Binding SelectedDataset}"/>
                            <Button Content="Remove then" 
                                    Height="35" 
                                    Width="Auto" 
                                    FontSize="12" 
                                    Padding="5" 
                                    VerticalAlignment="Top" 
                                    Margin="5,0"
                                    Style="{StaticResource RemoveButtonStyle}"
                                    Command="{Binding RemoveThenInConditionCommand}"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="3" 
                                      HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding IfThenConditions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="10">
                                            <ItemsControl ItemsSource="{Binding Conditions}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Margin="5">
                                                            <TextBlock Text="{Binding SelectedType}" 
                                                                       FontSize="20" 
                                                                       Margin="5" 
                                                                       Foreground="White"/>

                                                            <StackPanel Orientation="Horizontal" Margin="5"
                                                                        Visibility="{Binding SelectedType, Converter={StaticResource IfThenConditionTypeToVisibilityConverter}, ConverterParameter=if/and}">
                                                                <ComboBox Width="100" 
                                                                          Height="30" 
                                                                          FontSize="15"
                                                                          ItemsSource="{Binding DataContext.SelectedColumnsForAnalysis, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                          SelectedItem="{Binding SelectedColumn}" 
                                                                          Style="{StaticResource DarkComboBoxStyle}"/>
                                                                <ComboBox Width="40" 
                                                                          Height="30" 
                                                                          FontSize="15"
                                                                          ItemsSource="{Binding DataContext.Operators, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                          SelectedItem="{Binding SelectedOperator}" 
                                                                          Style="{StaticResource DarkComboBoxStyle}"/>
                                                                <TextBox Width="73" 
                                                                         Height="30" 
                                                                         FontSize="20" 
                                                                         Text="{Binding SelectedValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                         MaxLength="6"
                                                                         Style="{StaticResource DarkTextBoxStyle}">
                                                                    <i:Interaction.Behaviors>
                                                                        <behaviors:NumericInputBehaviorUserSample/>
                                                                    </i:Interaction.Behaviors>
                                                                </TextBox>
                                                            </StackPanel>

                                                            <StackPanel Orientation="Horizontal" Margin="5"
                                                                        Visibility="{Binding SelectedType, Converter={StaticResource IfThenConditionTypeToVisibilityConverter}, ConverterParameter=then}">
                                                                <ComboBox Width="100" Height="30" 
                                                                          FontSize="15"
                                                                          ItemsSource="{Binding DataContext.UniqueNamesFromClassifyingColumn, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                          SelectedItem="{Binding SelectedClass}" 
                                                                          Style="{StaticResource DarkComboBoxStyle}"/>
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <Border Style="{StaticResource PurpleGradientBorderStyle}"
                        Visibility="{Binding CanViewUserSample, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="5"
                              Grid.Row="0">
                            <TextBlock Text="Create your own samples" 
                                       FontSize="20"
                                       FontWeight="Bold" 
                                       Grid.Column="0" 
                                       VerticalAlignment="Center" 
                                       Foreground="White"/>
                        </Grid>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                            <Button Content="Add" 
                                    Height="35" 
                                    Width="50" 
                                    FontSize="12" 
                                    Padding="5" 
                                    VerticalAlignment="Top"
                                    Margin="5,0"
                                    Style="{StaticResource AddButtonStyle}"
                                    Command="{Binding AddSampleCommand}"/>
                            <Button Content="Remove" 
                                    Height="35" 
                                    Width="70" 
                                    FontSize="12" 
                                    Padding="5" 
                                    Margin="5,0"
                                    Style="{StaticResource RemoveButtonStyle}"
                                    VerticalAlignment="Top" Command="{Binding RemoveSampleCommand}"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding UserSample.UserSamples}" 
                                      Grid.Row="2" 
                                      Foreground="White">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="10" 
                                                Grid.IsSharedSizeScope="True">
                                        <ItemsControl ItemsSource="{Binding}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition SharedSizeGroup="ColumnNameGroup" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Text="{Binding ColumnName}"
                                                                   Grid.Column="0" 
                                                                   Margin="0,0,5,0"/>
                                                        <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                 Grid.Column="1" 
                                                                 Width="50"
                                                                 Style="{StaticResource DarkTextBoxStyle}">
                                                            <i:Interaction.Behaviors>
                                                                <behaviors:NumericInputBehaviorUserSample/>
                                                            </i:Interaction.Behaviors>
                                                        </TextBox>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>