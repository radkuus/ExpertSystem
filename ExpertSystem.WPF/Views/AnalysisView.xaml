<UserControl x:Class="ExpertSystem.WPF.Views.AnalysisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpertSystem.WPF.Views"
             xmlns:navigator="clr-namespace:ExpertSystem.WPF.State.Navigators"
             xmlns:vm="clr-namespace:ExpertSystem.WPF.ViewModels"
             xmlns:converters="clr-namespace:ExpertSystem.WPF.Converters"
             xmlns:behaviors="clr-namespace:ExpertSystem.WPF.Controls.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" SharedSizeGroup="HeaderRow"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="5" Grid.Row="0">
                    <TextBlock Text="Choose dataset" FontSize="20" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                </Grid>

                <ListView ItemsSource="{Binding UserDatasets}" FontSize="15" Margin="5" Grid.Row="1" SelectedItem="{Binding SelectedDataset}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="auto"/>
                            <GridViewColumn Width="auto">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="View Details" 
                                                Command="{Binding DataContext.DisplayDatasetAsDataFrameCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                FontSize="12" Padding="5"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="10" 
                Visibility="{Binding SelectedDataset, Converter={StaticResource NullToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" SharedSizeGroup="HeaderRow"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="5" Grid.Row="0">
                    <TextBlock Text="Choose model" FontSize="20" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center"/>
                </Grid>

                <StackPanel Grid.Row="1" Margin="10">
                    <StackPanel.Resources>
                        <Style TargetType="CheckBox">
                            <Setter Property="FontSize" Value="14"/>
                        </Style>
                    </StackPanel.Resources>

                    <CheckBox Content="KNN" IsChecked="{Binding IsKnnChecked}"/>
                    <CheckBox Content="Linear regression" IsChecked="{Binding IsLinearRegressionChecked}"/>
                    <CheckBox Content="Bayes" IsChecked="{Binding IsBayesChecked}"/>
                    <CheckBox Content="Neural Network" IsChecked="{Binding IsNeuralNetworkChecked}"/>
                    <CheckBox Content="Own" IsChecked="{Binding IsOwnChecked}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="10" 
                Visibility="{Binding IsAnyModelChecked, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" SharedSizeGroup="HeaderRow"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="5" Grid.Row="0">
                    <Grid.Resources>
                        <Style x:Key="VisibleTextStyle" TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsModelWithParametersChecked}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsModelWithParametersChecked}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                        <Style x:Key="VisibleTextStyle2" TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsModelWithParametersChecked}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsModelWithParametersChecked}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Resources>

                    <TextBlock Text="Choose hyperparameters and result column" TextWrapping="Wrap" FontSize="20" FontWeight="Bold" 
                               Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource VisibleTextStyle}"/>
                    <TextBlock Text="Choose result column" TextWrapping="Wrap" FontSize="20" FontWeight="Bold" 
                               Grid.Column="0" VerticalAlignment="Center" Style="{StaticResource VisibleTextStyle2}"/>
                </Grid>

                <StackPanel Grid.Row="1" Margin="5">
                    <StackPanel.Resources>
                        <Style TargetType="CheckBox">
                            <Setter Property="FontSize" Value="15"/>
                        </Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="17"/>
                        </Style>
                    </StackPanel.Resources>

                    <Grid Visibility="{Binding IsKnnChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="KNN" Margin="0,0,0,5"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Neighbours:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Width="100" FontSize="15" IsEnabled="{Binding IsKnnChecked}" 
                                      SelectedValue="{Binding SelectedNeighbours, Mode=TwoWay}" 
                                      SelectedValuePath="Content">
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="6"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Grid Visibility="{Binding IsNeuralNetworkChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Neural Network" Margin="0,10,0,0"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,5">
                            <TextBlock Text="Layers:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Width="100" FontSize="15" IsEnabled="{Binding IsNeuralNetworkChecked}" 
                                      SelectedValue="{Binding SelectedLayers, Mode=TwoWay}" 
                                      SelectedValuePath="Content">
                                <ComboBoxItem Content="2"/>
                                <ComboBoxItem Content="3"/>
                                <ComboBoxItem Content="4"/>
                                <ComboBoxItem Content="5"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <Grid Visibility="{Binding IsAnyModelChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Result column" Margin="0,10,0,0"/>
                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,5">
                            <TextBlock Text="Column:" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Width="100" FontSize="15" 
                                      ItemsSource="{Binding DatasetColumnNames}" 
                                      SelectedItem="{Binding SelectedResultColumn, Mode=TwoWay}"/>
                        </StackPanel>
                    </Grid>

                    <Button Content="Generate Results" 
                            Command="{Binding GenerateResultsCommand}" 
                            FontSize="15" 
                            Margin="0,10,0,0" 
                            Padding="10,5" 
                            HorizontalAlignment="Center" 
                            IsEnabled="{Binding CanGenerateResults}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="1" Margin="10" Visibility="{Binding IsResultColumnAndHyperparametersChecked, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                    <Button Content="Add" Height="35" Width="50" FontSize="12" Padding="5" VerticalAlignment="Top" Command="{Binding AddConditionCommand}"></Button>
                    <Button Content="Remove" Height="35" Width="70" FontSize="12" Padding="5" VerticalAlignment="Top" Command="{Binding RemoveConditionCommand}"></Button>
                </StackPanel>


            </Grid>
        </Border>
    </Grid>
</UserControl>