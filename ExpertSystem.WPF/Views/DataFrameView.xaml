<Window x:Class="ExpertSystem.WPF.Views.DataFrameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertSystem.WPF.Views"
        xmlns:controls="clr-namespace:ExpertSystem.WPF.Controls"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Title="Dataset" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:TopBar Grid.Row="0"/>

        <DataGrid  Grid.Row="1"
                   ItemsSource="{Binding DataFrame}"
                   HeadersVisibility="Column"
                   Style="{StaticResource CustomDataGridStyle}"/>
    </Grid>
</Window>
