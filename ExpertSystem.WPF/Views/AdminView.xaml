<UserControl x:Class="ExpertSystem.WPF.Views.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpertSystem.WPF.Views" 
             xmlns:viewmodels="clr-namespace:ExpertSystem.WPF.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:AdminViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BlueBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Create user" 
                    Height="30" 
                    Width="90" 
                    Grid.Column="0" 
                    Click="RegisterButton" />

            <Button Content="Edit user" 
                    Height="30" 
                    Width="90" 
                    Grid.Column="1" 
                    Click="EditButton" 
                    CommandParameter="{Binding SelectedUser}"/>

            <Button Content="Delete user" 
                    Height="30" 
                    Width="90" 
                    Grid.Column="2"
                    Command="{Binding DeleteUserCommand}"
                    CommandParameter="{Binding SelectedUser}"/>
        </Grid>



        <ListView ItemsSource="{Binding Users}" 
                      Grid.Column="0"
                      Grid.Row="1"
                      Margin="20" 
                      SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
                      SelectionChanged="ListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nickname" DisplayMemberBinding="{Binding Nickname}" Width="auto"/>
                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="auto"/>
                    </GridView>
                </ListView.View>
        </ListView>

        <Button Content="Logout" 
                Command="{Binding LogoutCommand}"
                Grid.Column="1"
                Grid.Row="0"
                Height="30" 
                Width="90"
                Style="{StaticResource PinkBlueButton}"/>

        <StackPanel  Width="180"
             Grid.Row="1"
             Grid.Column="1"
             Orientation="Vertical">
        
            <TextBlock  Text="Nickname"
                        HorizontalAlignment="Center"
                        Foreground="LightGray"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Tahoma"                             
                        Margin="0,35,0,0"/>

            <Grid Height="28" Margin="0,5,0,0">

                <TextBox x:Name="usertb"
                                 FontSize="14"
                                 FontFamily="Tahoma"
                                 Foreground="Black"
                                 BorderThickness="0,0,0,1"
                                 VerticalContentAlignment="Center"
                                 Padding="24,0,0,0"
                                 Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged}"/>

                <Image Source="/Images/UserIcon.png"
                               Width="14"
                               Height="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="6,0,0,0"
                               IsHitTestVisible="False"/>
            </Grid>

            <TextBlock  Text="Email"
                        HorizontalAlignment="Center"
                        Foreground="LightGray"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Tahoma"                             
                        Margin="0,25,0,0"/>

            <Grid Height="28" 
                  Margin="0,5,0,0">

                <TextBox x:Name="emailtb"
                                 FontSize="14"
                                 FontFamily="Tahoma"
                                 Foreground="Black"
                                 BorderThickness="0,0,0,1"
                                 VerticalContentAlignment="Center"
                                 Padding="24,0,0,0"
                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <Image Source="/Images/UserIcon.png"
                               Width="14"
                               Height="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="6,0,0,0"
                               IsHitTestVisible="False"/>
            </Grid>

            <TextBlock  Text="Password"
                        HorizontalAlignment="Center"
                        Foreground="DarkGray"
                        FontSize="12"
                        FontFamily="Tahoma"  
                        FontWeight="Medium"                           
                        Margin="0,25,0,0"/>

            <Grid Height="28" Margin="0,5,0,0">

                <PasswordBox x:Name="passwordpb"
                                 FontSize="14"
                                 FontFamily="Tahoma"
                                 Foreground="Black"
                                 BorderThickness="0,0,0,1"
                                 VerticalContentAlignment="Center"
                                 Padding="24,0,0,0"/>

                <Image Source="/Images/PasswordIcon.png"
                               Width="14"
                               Height="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="6,0,0,0"
                               IsHitTestVisible="False"/>

            </Grid>

            <TextBlock  Text="Repeat password"
                        HorizontalAlignment="Center"
                        Foreground="DarkGray"
                        FontSize="12"
                        FontFamily="Tahoma"  
                        FontWeight="Medium"                           
                        Margin="0,25,0,0"/>

            <Grid Height="28" Margin="0,5,0,0">

                <PasswordBox x:Name="password2pb"
                                 FontSize="14"
                                 FontFamily="Tahoma"
                                 Foreground="Black"
                                 BorderThickness="0,0,0,1"
                                 VerticalContentAlignment="Center"
                                 Padding="24,0,0,0"/>

                <Image Source="/Images/PasswordIcon.png"
                               Width="14"
                               Height="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="6,0,0,0"
                               IsHitTestVisible="False"/>

            </Grid>


            <TextBlock Margin="0,5,0,5"
              HorizontalAlignment="Center"
              DataContext="{Binding ErrorMessageViewModel}"
              Foreground="Red"
              Text="{Binding Message}"
              TextWrapping="Wrap"
              Visibility="{Binding ShowMessage, Converter={StaticResource BooleanVisibilityConverter}}"/>
            
        </StackPanel>
        
    </Grid>
</UserControl>