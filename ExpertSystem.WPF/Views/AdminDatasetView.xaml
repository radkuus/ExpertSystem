<UserControl x:Class="ExpertSystem.WPF.Views.AdminDatasetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpertSystem.WPF.Views" 
             xmlns:viewmodels="clr-namespace:ExpertSystem.WPF.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:AdminDatasetViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource BlueBackgroundBrush}">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0">

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Add dataset" 
                        Height="30" 
                        Width="90" 
                        Grid.Column="0"/>
                <Button Content="Edit dataset" 
                        Height="30" 
                        Width="90" 
                        Grid.Column="1"/>
                <Button Content="Delete dataset" 
                        Height="30" 
                        Width="90" 
                        Grid.Column="2"/>
            </Grid>

        </Grid>

        <ListView ItemsSource="{Binding Datasets}" Margin="20" Grid.Row="1"
                      SelectedItem="{Binding SelectedDataset, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="auto"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Column="1"
                Grid.Row="0"
                Content="Logout" 
                Command="{Binding LogoutCommand}"
                Height="30" 
                Width="90" 
                Style="{StaticResource PinkBlueButton}"/>


        <StackPanel  Width="180"
                     Grid.Row="1"
                     Grid.Column="1"
                     Orientation="Vertical">

            <TextBlock         Text="Dataset name"
                               HorizontalAlignment="Center"
                               Foreground="LightGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Tahoma"                             
                               Margin="0,35,0,0"/>

            <Grid Height="28" Margin="0,5,0,0">

                <TextBox x:Name="datasettb"
                                 FontSize="14"
                                 FontFamily="Tahoma"
                                 Foreground="Black"
                                 BorderThickness="0,0,0,1"
                                 VerticalContentAlignment="Center"
                                 Padding="24,0,0,0"
                                 Text="{Binding Nickname, UpdateSourceTrigger=PropertyChanged}"/>

                <Image Source="/Images/DatasetIcon.png"
                               Width="20"
                               Height="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="6,0,0,0"
                               IsHitTestVisible="False"/>

            </Grid>

            <TextBlock  Grid.Row="4" 
                        Grid.Column="1" 
                        Margin="0,5,0,5"
                        HorizontalAlignment="Center"
                        DataContext="{Binding ErrorMessageViewModel}"
                        Foreground="Red"
                        Text="{Binding Message}"
                        TextWrapping="Wrap"
                        Visibility="{Binding ShowMessage, Converter={StaticResource BooleanVisibilityConverter}}"/>   

        </StackPanel>
    </Grid>
</UserControl>