<UserControl x:Class="ExpertSystem.WPF.Views.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpertSystem.WPF.Converters"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Background="{StaticResource BlueBackgroundBrush}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Results" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"
                       Foreground="White"/>

            <TabControl Grid.Row="1" 
                        ItemsSource="{Binding Models}" 
                        SelectedIndex="0"
                        Background="Transparent"
                        BorderBrush="{StaticResource PurpleGradientBrush}"
                        ItemContainerStyle="{StaticResource CustomTabItemStyle}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>

                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <TabControl ItemContainerStyle="{StaticResource CustomTabItemStyle}"
                                    BorderBrush="{StaticResource PurpleGradientBrush}"
                                    Background="Transparent">
                            <TabItem Header="Classification">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="10">
                                        <TextBlock Text="Classification Report"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Margin="0,0,0,5"
                                                   Foreground="White"/>

                                        <TextBox Text="{Binding ClassificationReport}"
                                                 Foreground="White"
                                                 Background="Transparent"
                                                 BorderBrush="{StaticResource PurpleGradientBrush}"
                                                 IsReadOnly="True"
                                                 FontFamily="Consolas"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,10"
                                                 MinHeight="100"/>

                                        <lvc:CartesianChart 
                                            Series="{Binding BarChartSeries}"
                                            YAxes="{Binding YAxesBarChartSeries}"
                                            XAxes="{Binding XAxesBarChartSeries}"
                                            TooltipPosition="Hidden"
                                            Height="300">
                                        </lvc:CartesianChart>

                                        <!--tylko, gdy HasSamples jest true--> 
                                        <StackPanel Visibility="{Binding HasSamples, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <TextBlock Text="Samples"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       Margin="0,10,0,5"/>

                                            <DataGrid ItemsSource="{Binding Samples}"
                                                      AutoGenerateColumns="False"
                                                      CanUserAddRows="False"
                                                      IsReadOnly="True"
                                                      Margin="0,0,0,10"
                                                      MinHeight="150"
                                                      RowHeight="NaN"
                                                      RowHeaderWidth="0"
                                                      Background="Transparent"
                                                      Foreground="White"
                                                      BorderBrush="{StaticResource PurpleGradientBrush}"
                                                      HorizontalGridLinesBrush="Transparent"
                                                      VerticalGridLinesBrush="Transparent">

                                                <DataGrid.Resources>
                                                    <Style TargetType="DataGridColumnHeader">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="BorderBrush" Value="White"/>
                                                        <Setter Property="FontSize" Value="16"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="Padding" Value="5,5,5,10"/>
                                                    </Style>

                                                    <Style TargetType="DataGridRow">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </Style>

                                                    <Style TargetType="DataGridCell">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGrid.Resources>
                                                
                                                <DataGrid.Columns>
                                                    <DataGridTemplateColumn Header="Sample" Width="Auto">
                                                        <DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding SampleLabel}"
                                                                           FontWeight="Bold"
                                                                           TextWrapping="Wrap"
                                                                           Margin="5,0,5,0"/>
                                                            </DataTemplate>
                                                        </DataGridTemplateColumn.CellTemplate>
                                                    </DataGridTemplateColumn>
                                                
                                                    <DataGridTextColumn Header="Input"
                                                                        Binding="{Binding SampleData}"
                                                                        Width="2*">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="TextWrapping" Value="Wrap"/>
                                                                <Setter Property="Margin" Value="5,0,5,0"/>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>

                                                    <DataGridTextColumn Header="Output"
                                                                        Binding="{Binding Output}"
                                                                        Width="*">
                                                        <DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="TextWrapping" Value="Wrap"/>
                                                                <Setter Property="Margin" Value="5,0,5,0"/>
                                                            </Style>
                                                        </DataGridTextColumn.ElementStyle>
                                                    </DataGridTextColumn>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>

                            <TabItem Header="Confusion Matrix">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <lvc:CartesianChart 
                                        Series="{Binding ConfusionMatrixSeries}" 
                                        XAxes="{Binding ConfusionMatrixXAxes}"
                                        YAxes="{Binding ConfusionMatrixYAxes}"
                                        MinHeight="10">
                                    
                                    </lvc:CartesianChart>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </Grid>
    </Border>
</UserControl>