<UserControl x:Class="ExpertSystem.WPF.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExpertSystem.WPF.Views"
             xmlns:local1="clr-namespace:ExpertSystem.WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.Resources>
        <local1:BoolToCheckMarkConverter x:Key="BoolToCheckMarkConverter"/>
        <local1:ListToStringConverter x:Key="ListToStringConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
         Content="Show details"
         Command="{Binding ShowDetailsCommand}"
         CommandParameter="{Binding SelectedExperiment}"
         Style="{StaticResource CustomButtonStyle}"/>


        <DataGrid Grid.Row="1" 
          VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          AlternatingRowBackground="#FFF7FAFC"
          RowBackground="White"
          HeadersVisibility="Column"
          ColumnHeaderHeight="34"
          RowHeight="32"
          GridLinesVisibility="None"
          SelectionMode="Single"
          SelectionUnit="FullRow"
          Padding="6"
          IsReadOnly="True"
          ItemsSource="{Binding ExperimentsHistory}"
          SelectedItem="{Binding SelectedExperiment, Mode=TwoWay}">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Date" Binding="{Binding DateDisplay}" Width="1.5*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Dataset" Binding="{Binding Dataset}" Width="1.5*" />
                <DataGridTextColumn Header="Models" Binding="{Binding ModelsDisplay}" Width="2*" />
                <DataGridTemplateColumn Header="Analyzed columns" Width="3*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding AnalyzedColumns, Converter={StaticResource ListToStringConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Target column" Binding="{Binding TargetColumn}" Width="*"/>
                <DataGridTextColumn Header="Training size (%)" Binding="{Binding TrainingSize}" Width="0.3*" />
                <DataGridTemplateColumn Header="Samples" Width="0.3*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="16" TextAlignment="Center"
                           Text="{Binding HasSamples, Converter={StaticResource BoolToCheckMarkConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
