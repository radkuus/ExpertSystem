<Window x:Class="ExpertSystem.WPF.Views.ExperimentDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="clr-namespace:ExpertSystem.WPF.Converters"
        Title="Experiment Details" Height="400" Width="600">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
        
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Results" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <TabControl Grid.Row="1" ItemsSource="{Binding Models}" SelectedIndex="0">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <TabControl>
                        <TabItem Header="Classification">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="10">
                                    <TextBlock Text="Classification Report"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               Margin="0,0,0,5"/>

                                    <TextBox Text="{Binding ClassificationReport}"
                                             IsReadOnly="True"
                                             FontFamily="Consolas"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,10"
                                             MinHeight="100"/>

                                    <!--tylko, gdy HasSamples jest true-->
                                    <StackPanel Visibility="{Binding HasSamples, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="Samples"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Margin="0,10,0,5"/>

                                        <DataGrid ItemsSource="{Binding Samples}"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  IsReadOnly="True"
                                                  Margin="0,0,0,10"
                                                  MinHeight="150"
                                                  RowHeight="NaN">

                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn Header="Sample" Width="Auto">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding SampleLabel}"
                                                                       FontWeight="Bold"
                                                                       TextWrapping="Wrap"
                                                                       Margin="5,0,5,0"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <DataGridTextColumn Header="Input"
                                                                    Binding="{Binding SampleData}"
                                                                    Width="2*">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                                            <Setter Property="Margin" Value="5,0,5,0"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                
                                                <DataGridTextColumn Header="Output"
                                                                    Binding="{Binding Output}"
                                                                    Width="*">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextWrapping" Value="Wrap"/>
                                                            <Setter Property="Margin" Value="5,0,5,0"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <TabItem Header="Confusion Matrix">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <TextBox Text="{Binding ConfusionMatrixText}"
                                         IsReadOnly="True"
                                         FontFamily="Consolas"
                                         TextWrapping="Wrap"
                                         Margin="10"/>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
